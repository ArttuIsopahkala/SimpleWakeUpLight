<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/widgetContainer"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_widget_background"
    android:layout_margin="@dimen/widget_margin"
    android:padding="10dp">
    <TextView
        android:id="@+id/appNameText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/app_name"
        android:textSize="13sp"
        android:textColor="@color/color_text_light"/>
    <TextView
        android:id="@+id/alarmText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="07:00"
        android:layout_centerVertical="true"
        android:textSize="26sp"
        android:textColor="@color/color_text_light"/>
    <TextView
        android:id="@+id/delayText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="15min"
        android:layout_alignParentBottom="true"
        android:textSize="15sp"
        android:textColor="@color/color_text_light"/>
    <LinearLayout
        android:id="@+id/weekdaysContainer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true">
        <TextView
            android:id="@+id/mondayText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="5dp"
            android:textSize="14sp"
            android:text="@string/monday_attr"
            android:textColor="@color/color_text_light_secondary"/>
        <TextView
            android:id="@+id/tuesdayText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="5dp"
            android:textSize="14sp"
            android:text="@string/tuesday_attr"
            android:textColor="@color/color_text_light_secondary"/>
        <TextView
            android:id="@+id/wednesdayText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="5dp"
            android:textSize="14sp"
            android:text="@string/wednesday_attr"
            android:textColor="@color/color_text_light_secondary"/>
        <TextView
            android:id="@+id/thursdayText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="5dp"
            android:textSize="14sp"
            android:text="@string/thursday_attr"
            android:textColor="@color/color_text_light_secondary"/>
        <TextView
            android:id="@+id/fridayText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="5dp"
            android:textSize="14sp"
            android:text="@string/friday_attr"
            android:textColor="@color/color_text_light_secondary"/>
        <TextView
            android:id="@+id/saturdayText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="5dp"
            android:textSize="14sp"
            android:text="@string/saturday_attr"
            android:textColor="@color/color_text_light_secondary"/>
        <TextView
            android:id="@+id/sundayText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="5dp"
            android:textSize="14sp"
            android:text="@string/sunday_attr"
            android:textColor="@color/color_text_light_secondary"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/lightIconContent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:padding="5dp"
        android:clickable="true"
        android:focusable="true">
        <ImageView
            android:id="@+id/lightIcon"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/icon_sun_off"
            android:clickable="false"/>
    </LinearLayout>

</RelativeLayout>